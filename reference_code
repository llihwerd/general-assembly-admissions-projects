document.addEventListener('DOMContentLoaded', function(event) {
    // Select the button by its ID
    var button = document.getElementById('generate-message');

    // Add an event listener to the button
    button.addEventListener('click', function() {
        // Select the input field by its ID
        var inputField = document.getElementById('message');

        // Log the value of the input field
        console.log(inputField.value);
    });
});






document.addEventListener('DOMContentLoaded', function(event) {
    // Select the button by its ID
    var addButton = document.getElementById('generate-todo');

    // Add an event listener to the button
    addButton.addEventListener('click', function() {
        // Select the input field by its ID
        var inputField = document.getElementById('new-todo');

        // Get the value of the input field
        var todoText = inputField.value;

        // Create a new list item
        var newListItem = document.createElement('li');

        // Set the text of the new list item
        newListItem.textContent = todoText;

        // Select the unordered list by its class
        var todoList = document.querySelector('.todos');

        // Append the new list item to the unordered list
        todoList.appendChild(newListItem);

        // Clear the input field
        inputField.value = '';
    });
});










